<odoo>
  <data>

      <record id="view_tech_hr_inherit" model="ir.ui.view">
                <field name="name">tech.hr.form.inherit</field>
                <field name="model">hr.employee</field>
                <field name="inherit_id" ref="hr.view_employee_form"/>
                <field name="arch" type="xml">
                    <xpath expr="//field[@name='parent_id']" position="after">
                                    <field name="grade_id"/>
                                    <field name="corps_id"/>
                                    <field name="echelle_id"/>
                                    <field name="echelon_id"/>
                                  
                     </xpath>
                     <xpath expr="//field[@name='company_id']" position="after">
                                  <field name="matricule"/>
                                    <field name="matricule_interne" />
                                    <field name="n_rcar" />
                                    <field name="n_cmr"/>
                                    <field name="indice"/>
                                    <field name="date_grade"/>
                                    <field name="date_echelon"/>
                                    <field name="date_ambauche"/>
                                    <field name="situation"/>
                 </xpath>
          </field>
    </record>
  </data>

</odoo>